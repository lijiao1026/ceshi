<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="com.lj.pojo.department.Department"  table="DEPARTMENT" lazy="false">
	     <id name="serial"  column="serial">
	        <generator class="native" />
	      </id>
        <property name="departmentName"  column="departmentName" length="50"></property>
		<property name="departmentAddress"  column="departmentAddress" length="50"></property>
		
</class>
</hibernate-mapping>